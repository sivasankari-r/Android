<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="CustomTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextView.Blue_Text">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textColorHint">@color/light_blue</item>
    </style>

    <style name="CustomTextView.Blue_Text.ActionBar">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CustomTextView.Green_Text">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textColorHint">@color/light_green</item>
    </style>
    
     <style name="CustomTextView.Green_Text.ActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomCheckBoxBlue" parent="@style/CustomTextView.Blue_Text">
        <item name="android:button">@drawable/check_blue_style</item>
    </style>

    <style name="CustomCheckBoxGreen" parent="@style/CustomTextView.Green_Text">
        <item name="android:button">@drawable/check_green_style</item>
    </style>

    <style name="Rating_Green">
        <item name="android:progressDrawable">@drawable/rating_green</item>
        <item name="android:maxHeight">13dp</item>
        <item name="android:minHeight">13dp</item>
    </style>

    <style name="Rating_Blue">
        <item name="android:progressDrawable">@drawable/rating_blue</item>
        <item name="android:maxHeight">13dp</item>
        <item name="android:minHeight">13dp</item>
    </style>

    <style name="Image_Blue">
        <item name="android:background">@drawable/s4_bl</item>
    </style>

    <style name="Image_Green">
        <item name="android:background">@drawable/s4_green</item>
    </style>

    <style name="Bg_Green">
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="Bg_Blue">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="Rounded_Bg_Blue">
        <item name="android:background">@color/light_blue</item>
        <item name="roundedBackgroud">@drawable/rounded_corner</item>
        <item name="roundedCorner">true</item>
    </style>

    <style name="Rounded_Bg_Green">
        <item name="android:background">@color/light_green</item>
        <item name="roundedBackgroud">@drawable/rounded_corner_green</item>
    </style>

    <style name="Spinner_Blue">
        <item name="android:background">@drawable/spinner_ab_pressed_holo_light</item>
    </style>

    <style name="Spinner_Green">
        <item name="android:background">@drawable/spinner_ab_pressed_green_light</item>
    </style>

    <style name="Spinner_Bg_Blue">
        <item name="android:background">@color/lighter_blue</item>
    </style>

    <style name="Spinner_Bg_Green">
        <item name="android:background">@color/lighter_green</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/CustomTextView.Blue_Text.ActionBar</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="MyActionBar_Green" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="android:titleTextStyle">@style/CustomTextView.Green_Text.ActionBar</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    
